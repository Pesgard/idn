<style>
  /* Logo Styling (matching header) */
  .logo-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--color-accent) 0%, #ff4757 100%);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-md);
  }
  
  .logo-text {
    color: var(--color-white);
    font-weight: var(--font-weight-extrabold);
    font-size: 1rem;
    letter-spacing: -0.5px;
  }
  
  .logo-text-container {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }
  
  .brand-name {
    color: var(--color-white);
    font-weight: var(--font-weight-bold);
    font-size: 1.25rem;
    letter-spacing: -1px;
  }
  
  .brand-subtitle {
    color: var(--color-gray-400);
    font-weight: var(--font-weight-medium);
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  /* Contact Info */
  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
  }
  
  /* Section Titles */
  .section-title {
    color: var(--color-white);
    font-weight: var(--font-weight-bold);
    font-size: 1.125rem;
    margin-bottom: var(--spacing-lg);
    position: relative;
    padding-bottom: var(--spacing-sm);
  }
  
  .section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 30px;
    height: 2px;
    background-color: var(--color-accent);
  }
  
  /* Footer Links */
  .footer-links {
    list-style: none;
    padding: 0;
    space-y: var(--spacing-sm);
  }
  
  .footer-links li {
    margin-bottom: var(--spacing-sm);
  }
  
  .footer-links a {
    color: var(--color-gray-300);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all var(--transition-fast);
    display: inline-block;
  }
  
  .footer-links a:hover {
    color: var(--color-accent);
    transform: translateX(4px);
  }
  
  /* Social Links */
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    color: var(--color-gray-300);
    text-decoration: none;
    transition: all var(--transition-normal);
  }
  
  .social-link:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-white);
    transform: translateY(-2px);
  }
  
  /* Newsletter */
  .newsletter-input {
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--color-white);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    min-width: 250px;
  }
  
  .newsletter-input:focus {
    outline: none;
    border-color: var(--color-accent);
    background-color: rgba(255, 255, 255, 0.1);
  }
  
  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  /* Button variant */
  .btn-accent {
    background-color: var(--color-accent);
    color: var(--color-white);
    border: 2px solid var(--color-accent);
  }
  
  .btn-accent:hover {
    background-color: var(--color-accent-hover);
    border-color: var(--color-accent-hover);
  }
  
  /* Quick CTA */
  .quick-cta {
    border: 1px solid rgba(251, 44, 54, 0.2);
    background: linear-gradient(135deg, rgba(251, 44, 54, 0.05) 0%, rgba(255, 71, 87, 0.05) 100%);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      padding-top: var(--spacing-2xl);
      padding-bottom: var(--spacing-2xl);
    }
    
    .newsletter-form {
      width: 100%;
    }
    
    .newsletter-input {
      min-width: auto;
      width: 100%;
    }
    
    .brand-name {
      font-size: 1.125rem;
    }
    
    .logo-icon {
      width: 36px;
      height: 36px;
    }
    
    .logo-text {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  // Newsletter form handling
  document.addEventListener('DOMContentLoaded', () => {
    const newsletterForm = document.querySelector('.newsletter-form');
    
    newsletterForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const emailInput = newsletterForm.querySelector('input[type="email"]') as HTMLInputElement;
      const submitButton = newsletterForm.querySelector('button[type="submit"]') as HTMLButtonElement;
      
      if (!emailInput || !submitButton) return;
      
      const email = emailInput.value;
      const originalText = submitButton.textContent;
      
      // Loading state
      submitButton.textContent = 'Suscribiendo...';
      submitButton.disabled = true;
      
      try {
        // Simulate API call
        await new Promise(resolve => setTimeout(resolve, 1000));
        
        // Success state
        submitButton.textContent = '¡Suscrito!';
        submitButton.style.backgroundColor = '#10b981';
        emailInput.value = '';
        
        setTimeout(() => {
          submitButton.textContent = originalText;
          submitButton.disabled = false;
          submitButton.style.backgroundColor = '';
        }, 2000);
        
      } catch (error) {
        // Error state
        submitButton.textContent = 'Error. Intenta de nuevo';
        submitButton.style.backgroundColor = '#ef4444';
        
        setTimeout(() => {
          submitButton.textContent = originalText;
          submitButton.disabled = false;
          submitButton.style.backgroundColor = '';
        }, 2000);
      }
    });
  });
</script>