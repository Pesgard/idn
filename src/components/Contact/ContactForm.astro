---
export interface Props {
  title?: string;
  subtitle?: string;
  variant?: 'default' | 'compact' | 'full';
  actionUrl?: string;
}

const { 
  title = "Solicita tu diagn√≥stico sin costo",
  subtitle = "Nuestros expertos t√©cnicos analizar√°n tu proceso y te propondr√°n la mejor soluci√≥n.",
  variant = 'default',
  actionUrl = '/api/contact'
} = Astro.props;

const isCompact = variant === 'compact';
const isFull = variant === 'full';
---

<div class={`contact-form ${variant} animate-on-scroll`}>
  {!isCompact && (
    <div class="form-header text-center mb-8">
      <h2 class="title-lg text-white mb-4">{title}</h2>
      <p class="text-gray-300 mx-auto">{subtitle}</p>
    </div>
  )}
  
  <form action={actionUrl} method="POST" class="contact-form-inner">
    <div class={`form-grid ${isCompact ? 'grid-2' : isFull ? 'grid-2' : 'grid-1'}`}>
      <!-- Nombre -->
      <div class="form-group">
        <label for="name" class="form-label">
          Nombre completo *
        </label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required 
          class="form-input"
          placeholder="Tu nombre completo"
        />
      </div>
      
      <!-- Empresa -->
      <div class="form-group">
        <label for="company" class="form-label">
          Empresa *
        </label>
        <input 
          type="text" 
          id="company" 
          name="company" 
          required 
          class="form-input"
          placeholder="Nombre de tu empresa"
        />
      </div>
      
      {isFull && (
        <>
          <!-- Cargo -->
          <div class="form-group">
            <label for="position" class="form-label">
              Cargo
            </label>
            <input 
              type="text" 
              id="position" 
              name="position" 
              class="form-input"
              placeholder="Tu cargo o posici√≥n"
            />
          </div>
          
          <!-- Sector -->
          <div class="form-group">
            <label for="sector" class="form-label">
              Sector industrial
            </label>
            <select id="sector" name="sector" class="form-input">
              <option value="">Selecciona tu sector</option>
              <option value="alimentario">Alimentario</option>
              <option value="farmaceutico">Farmac√©utico</option>
              <option value="quimico">Qu√≠mico</option>
              <option value="plastico">Pl√°stico</option>
              <option value="minero">Minero</option>
              <option value="ceramico">Cer√°mico</option>
              <option value="otro">Otro</option>
            </select>
          </div>
        </>
      )}
      
      <!-- Email -->
      <div class="form-group">
        <label for="email" class="form-label">
          Correo electr√≥nico *
        </label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          class="form-input"
          placeholder="tu@empresa.com"
        />
      </div>
      
      <!-- Tel√©fono -->
      <div class="form-group">
        <label for="phone" class="form-label">
          Tel√©fono
        </label>
        <input 
          type="tel" 
          id="phone" 
          name="phone" 
          class="form-input"
          placeholder="+1 (555) 123-4567"
        />
      </div>
    </div>
    
    <!-- Mensaje -->
    <div class="form-group">
      <label for="message" class="form-label">
        {isCompact ? 'Mensaje' : 'Cu√©ntanos sobre tu proceso actual'}
      </label>
      <textarea 
        id="message" 
        name="message" 
        rows={isCompact ? "3" : "4"}
        class="form-input form-textarea"
        placeholder={isCompact ? "Tu mensaje..." : "Describe tu proceso actual, qu√© equipos tienes, qu√© problemas enfrentas, etc."}
      ></textarea>
    </div>
    
    {isFull && (
      <!-- Presupuesto -->
      <div class="form-group">
        <label for="budget" class="form-label">
          Presupuesto estimado (opcional)
        </label>
        <select id="budget" name="budget" class="form-input">
          <option value="">Selecciona un rango</option>
          <option value="< 10k">Menos de $10,000 USD</option>
          <option value="10k-50k">$10,000 - $50,000 USD</option>
          <option value="50k-100k">$50,000 - $100,000 USD</option>
          <option value="100k+">M√°s de $100,000 USD</option>
        </select>
      </div>
    )}
    
    <!-- T√©rminos y condiciones -->
    <div class="form-group">
      <label class="flex items-start gap-3 text-sm text-gray-300">
        <input 
          type="checkbox" 
          name="terms" 
          required 
          class="mt-1 accent-color-accent"
        />
        <span>
          Acepto que IDN se ponga en contacto conmigo para brindarme informaci√≥n sobre sus productos y servicios. 
          <a href="/privacidad" class="text-accent hover:underline">Ver pol√≠tica de privacidad</a>
        </span>
      </label>
    </div>
    
    <!-- Bot√≥n de env√≠o -->
    <div class="form-submit">
      <button type="submit" class="btn btn-primary w-full">
        <span class="submit-text">Solicitar diagn√≥stico gratuito</span>
        <span class="loading-text hidden">Enviando...</span>
      </button>
      <p class="text-xs text-gray-400 text-center mt-3">
        ‚ö° Respuesta en menos de 24 horas ‚Ä¢ üîí Informaci√≥n segura ‚Ä¢ ‚úÖ Sin compromiso
      </p>
    </div>
  </form>
</div>

<style>
  .contact-form {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-2xl);
  }
  
  .contact-form.compact {
    padding: var(--spacing-xl);
  }
  
  .contact-form.full {
    background: var(--color-white);
    color: var(--color-primary);
  }
  
  .contact-form.full .form-header h2,
  .contact-form.full .form-header p {
    color: var(--color-primary);
  }
  
  .form-grid {
    display: grid;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }
  
  .grid-1 { grid-template-columns: 1fr; }
  .grid-2 { grid-template-columns: repeat(2, 1fr); }
  
  .form-label {
    color: var(--color-white);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--spacing-sm);
    display: block;
  }
  
  .contact-form.full .form-label {
    color: var(--color-primary);
  }
  
  .form-input {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: var(--color-white);
  }
  
  .form-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .contact-form.full .form-input {
    background: var(--color-white);
    border-color: var(--color-gray-300);
    color: var(--color-primary);
  }
  
  .contact-form.full .form-input::placeholder {
    color: var(--color-gray-500);
  }
  
  .form-input:focus {
    border-color: var(--color-accent);
    background: rgba(255, 255, 255, 0.15);
  }
  
  .contact-form.full .form-input:focus {
    background: var(--color-white);
  }
  
  /* Loading state */
  .btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }
  
  .loading .submit-text {
    display: none;
  }
  
  .loading .loading-text {
    display: inline;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .form-grid.grid-2 {
      grid-template-columns: 1fr;
    }
    
    .contact-form {
      padding: var(--spacing-xl);
    }
    
    .contact-form.compact {
      padding: var(--spacing-lg);
    }
  }
</style>

<script>
  // Manejo del formulario
  document.addEventListener('DOMContentLoaded', () => {
    const forms = document.querySelectorAll('.contact-form-inner');
    
    forms.forEach(form => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const button = form.querySelector('button[type="submit"]');
        const submitText = button.querySelector('.submit-text');
        const loadingText = button.querySelector('.loading-text');
        
        // Estado de carga
        button.disabled = true;
        button.classList.add('loading');
        
        try {
          const formData = new FormData(form);
          const response = await fetch(form.action, {
            method: 'POST',
            body: formData
          });
          
          if (response.ok) {
            // √âxito
            form.innerHTML = `
              <div class="text-center py-8">
                <div class="text-6xl mb-4">‚úÖ</div>
                <h3 class="title-md text-accent mb-4">¬°Solicitud enviada con √©xito!</h3>
                <p class="text-gray-300 mb-6">Nuestro equipo t√©cnico se pondr√° en contacto contigo en las pr√≥ximas 24 horas.</p>
                <a href="/" class="btn btn-outline">Volver al inicio</a>
              </div>
            `;
          } else {
            throw new Error('Error en el env√≠o');
          }
        } catch (error) {
          // Error
          alert('Error al enviar el formulario. Por favor, intenta de nuevo o cont√°ctanos por WhatsApp.');
          button.disabled = false;
          button.classList.remove('loading');
        }
      });
    });
  });
</script> 