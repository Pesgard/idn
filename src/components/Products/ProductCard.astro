---
export interface Props {
  title: string;
  description: string;
  image: string;
  category: string;
  features: string[];
  brochureUrl?: string;
}

const { title, description, image, category, features, brochureUrl } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group animate-on-scroll">
  <div class="relative overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
    />
    <div class="absolute top-4 left-4">
      <span class="bg-accent text-white px-3 py-1 rounded-full text-sm font-medium">
        {category}
      </span>
    </div>
  </div>
  
  <div class="p-6">
    <h3 class="text-xl font-bold text-secondary-800 mb-2">{title}</h3>
    <p class="text-gray-600 mb-4 leading-relaxed">{description}</p>
    
    <div class="mb-4">
      <h4 class="text-sm font-semibold text-secondary-700 mb-2">Características:</h4>
      <ul class="space-y-1">
        {features.map((feature: string) => (
          <li class="flex items-center text-sm text-gray-600">
            <svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            {feature}
          </li>
        ))}
      </ul>
    </div>
    
    <div class="flex flex-col sm:flex-row gap-3">
      <a href="/contacto" class="flex-1 btn btn-primary">
        Solicitar Cotización
      </a>
      {brochureUrl && (
        <a 
          href={brochureUrl}
          download
          class="flex-1 border border-accent text-accent px-4 py-2 rounded-lg hover:bg-accent-light transition-colors text-sm font-medium text-center"
        >
          Descargar Ficha
        </a>
      )}
    </div>
  </div>
</div>