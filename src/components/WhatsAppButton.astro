<style>
  .whatsapp-button-container {
    position: fixed;
    bottom: var(--spacing-xl);
    right: var(--spacing-xl);
    z-index: 1000;
  }
  
  .whatsapp-float {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
    color: var(--color-white);
    border-radius: var(--radius-full);
    text-decoration: none;
    box-shadow: var(--shadow-xl);
    transition: all var(--transition-normal);
    overflow: visible;
    cursor: pointer;
    border: 3px solid rgba(255, 255, 255, 0.2);
  }
  
  .whatsapp-float::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, transparent 30%, rgba(255,255,255,0.3) 50%, transparent 70%);
    border-radius: var(--radius-full);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }
  
  .whatsapp-float:hover::before {
    transform: translateX(100%);
  }
  
  .whatsapp-float:hover {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 20px 40px rgba(37, 211, 102, 0.4);
    border-color: rgba(255, 255, 255, 0.4);
  }
  
  .whatsapp-icon {
    width: 32px;
    height: 32px;
    z-index: 1;
    position: relative;
  }
  
  /* Tooltip */
  .whatsapp-tooltip {
    position: absolute;
    right: 70px;
    top: 50%;
    transform: translateY(-50%);
    background: var(--color-white);
    color: var(--color-primary);
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-normal);
    white-space: nowrap;
    border: 1px solid var(--color-gray-200);
  }
  
  .whatsapp-tooltip::after {
    content: '';
    position: absolute;
    top: 50%;
    right: -6px;
    transform: translateY(-50%);
    width: 0;
    height: 0;
    border-left: 6px solid var(--color-white);
    border-top: 6px solid transparent;
    border-bottom: 6px solid transparent;
  }
  
  .whatsapp-float:hover .whatsapp-tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(-50%) translateX(-8px);
  }
  
  .tooltip-title {
    font-weight: var(--font-weight-semibold);
    font-size: 0.9rem;
    margin-bottom: 2px;
  }
  
  .tooltip-subtitle {
    font-size: 0.75rem;
    color: var(--color-gray-600);
  }
  
  /* Online indicator */
  .online-indicator {
    position: absolute;
    top: -2px;
    right: -2px;
    width: 18px;
    height: 18px;
    background: var(--color-white);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .online-dot {
    width: 10px;
    height: 10px;
    background: #10b981;
    border-radius: var(--radius-full);
    animation: pulse-online 2s infinite;
  }
  
  @keyframes pulse-online {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.7;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
  
  /* Notification badge */
  .notification-badge {
    position: absolute;
    top: -8px;
    right: -8px;
    background: var(--color-accent);
    color: var(--color-white);
    width: 24px;
    height: 24px;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: var(--font-weight-bold);
    animation: bounce-notification 1s infinite;
    border: 2px solid var(--color-white);
  }
  
  @keyframes bounce-notification {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-8px);
    }
    60% {
      transform: translateY(-4px);
    }
  }
  
  /* Floating animation */
  .whatsapp-float {
    animation: float-whatsapp 3s ease-in-out infinite;
  }
  
  @keyframes float-whatsapp {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-6px);
    }
  }
  
  .whatsapp-float:hover {
    animation: none;
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .whatsapp-button-container {
      bottom: var(--spacing-lg);
      right: var(--spacing-lg);
    }
    
    .whatsapp-float {
      width: 56px;
      height: 56px;
    }
    
    .whatsapp-icon {
      width: 28px;
      height: 28px;
    }
    
    .whatsapp-tooltip {
      right: 65px;
      padding: var(--spacing-sm) var(--spacing-md);
    }
    
    .tooltip-title {
      font-size: 0.8rem;
    }
    
    .tooltip-subtitle {
      font-size: 0.7rem;
    }
  }
  
  @media (max-width: 480px) {
    .whatsapp-float {
      width: 50px;
      height: 50px;
    }
    
    .whatsapp-icon {
      width: 24px;
      height: 24px;
    }
    
    /* Hide tooltip on very small screens */
    .whatsapp-tooltip {
      display: none;
    }
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .whatsapp-float {
      border: 3px solid var(--color-primary);
    }
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .whatsapp-float,
    .online-dot,
    .notification-badge {
      animation: none;
    }
    
    .whatsapp-float:hover {
      transform: scale(1.05);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const whatsappButton = document.querySelector('.whatsapp-float');
    const notification = document.getElementById('whatsapp-notification');
    
    // Track user interaction for analytics (optional)
    whatsappButton?.addEventListener('click', () => {
      // You can add analytics tracking here
      console.log('WhatsApp button clicked');
      
      // Hide notification if visible
      if (notification && !notification.classList.contains('hidden')) {
        notification.classList.add('hidden');
      }
      
      // Optional: Store in localStorage that user interacted
      localStorage.setItem('whatsapp-contacted', 'true');
    });
    
    // Optional: Show notification after some time if user hasn't contacted
    const hasContacted = localStorage.getItem('whatsapp-contacted');
    if (!hasContacted) {
      setTimeout(() => {
        if (notification) {
          notification.classList.remove('hidden');
          
          // Auto-hide after 10 seconds
          setTimeout(() => {
            notification.classList.add('hidden');
          }, 10000);
        }
      }, 30000); // Show after 30 seconds
    }
    
    // Add entrance animation
    setTimeout(() => {
      whatsappButton?.classList.add('animate-fade-in-up');
    }, 2000);
  });
</script>